{
    "name": "mpyw/mockery-pdo",
    "description": "BDD-style PDO Mocking Library for Mockery",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mpyw",
            "email": "ryosuke_i_628@yahoo.co.jp"
        }
    ],
    "keywords": ["PDO", "database", "mockery","mock", "mocking", "BDD", "test", "testing"],
    "autoload": {
        "psr-4": {
            "Mpyw\\MockeryPDO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mpyw\\MockeryPDO\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-pdo": "*",
        "mockery/mockery": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.1"
    }
}
